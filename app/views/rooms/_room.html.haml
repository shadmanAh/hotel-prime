.col-md-4
  %section.ftco-section.ftco-services
    .container
      .row
        .d-flex.services.align-self-stretch.px-4.ftco-animate
          .d-block.services-wrap.text-center
            .media-body.py-4.px-3
              %h3.heading
                = link_to room.title, room_path(room)
              %p 
                = room.description 
              %p 
                .far.fa-clock
                = room.created_at.strftime('%d-%b-%Y')
                .fa.fa-user
                = room.user.username
                = number_to_currency(room.price)
              %p 
                = room.short_description 
              %p 
                .fas.fa-door-open
                = room.size 
                M
                .fas.fa-eye
                = room.view 
                .fas.fa-bed
                = room.bed 
                .fa.fa-users
                = room.opacity
              %p
                = link_to 'Read more', room, class: 'btn btn-primary'
                    
              %p
                = link_to 'Edit', edit_room_path(room), class: 'btn btn-sm btn-warning'
                = link_to 'Destroy', room, method: :delete, class: 'btn btn-sm btn-danger'