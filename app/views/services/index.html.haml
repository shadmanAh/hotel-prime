%section.hero-wrap.hero-wrap-2{"data-stellar-background-ratio" => "0.5", style: "background-image: url('http://127.0.0.1:3000#{url_for(@about.avatar)}');"}
  .overlay
  .container
    .row.no-gutters.slider-text.align-items-center.justify-content-center
      .col-md-9.text-center
        %p.breadcrumbs.mb-2
          %span
            Home  Services 
            %i.ion-ios-arrow-forward
        %h1.mb-0.bread 
          Services

.container
  - @hotel_intros.each do |hotel_intro|
    = render 'hotel_intros/hotel', hotel_intro: hotel_intro
.row

%section.ftco-service.bg-light.ftco-no-pt
  .container
    .row.no-gutters.justify-content-center.pb-5.mb-3
      .col-md-7.heading-section.text-center
        %h2 Amenities
    .row
      - @services.each do |service|
        = render 'services/serv', service: service

%h1 Listing services

%table
  %thead
    %tr
      %th Icon
      %th Title
      %th Description
      %th
      %th
      %th

  %tbody
    - @services.each do |service|
      %tr
        %td= service.icon
        %td= service.title
        %td= service.description
        %td= link_to 'Show', service
        %td= link_to 'Edit', edit_service_path(service)
        %td= link_to 'Destroy', service, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Service', new_service_path
